@model Homies.RealEstate.Configuration.Dto.ThemeSettingsDto

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a href="#Theme12Header" class="nav-link active" data-toggle="tab" role="tab">
            @L("UiCustomization_Header")
        </a>
    </li>
    <li class="nav-item">
        <a href="#Theme12SubHeader" class="nav-link" data-toggle="tab" role="tab">
            @L("UiCustomization_SubHeader")
        </a>
    </li>
    <li class="nav-item">
        <a href="#Theme12Menu" class="nav-link" data-toggle="tab" role="tab">
            @L("UiCustomization_Menu")
        </a>
    </li>
    <li class="nav-item">
        <a href="#Theme12Footer" class="nav-link" data-toggle="tab" role="tab">
            @L("UiCustomization_Footer")
        </a>
    </li>
</ul>
<div class="tab-content m-5">
    <div id="Theme12Header" class="tab-pane active">
        <input type="hidden" name="Theme" value="theme12" />

        <form class="HeaderSettingsForm">
            <h5 class="margin-bottom-20">@L("UiCustomization_Desktop")</h5>
            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="DesktopFixedHeader" value="true" @(Model.Header.DesktopFixedHeader ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("UiCustomization_DesktopFixedHeader")
                </label>
            </div>
            <h5 class="margin-bottom-20">@L("UiCustomization_Mobile")</h5>
            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="MobileFixedHeader" value="true" @(Model.Header.MobileFixedHeader ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("UiCustomization_MobileFixedHeader")
                </label>
            </div>
        </form>
    </div>
    <div id="Theme12SubHeader" class="tab-pane">
        <form class="SubHeaderSettingsForm">
            <h5 class="margin-bottom-20">@L("UiCustomization_SubHeader")</h5>
            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="FixedSubHeader" value="true" @(Model.SubHeader.FixedSubHeader ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("UiCustomization_FixedSubHeader")
                </label>
            </div>
            <h5 class="margin-bottom-20">@L("UiCustomization_SubHeaderStyle")</h5>
            <div class="form-group">
                @Html.DropDownList("SubHeaderStyle", new SelectList(new List<SelectListItem>
                {
                    new SelectListItem {Text = L("UiCustomization_SubHeaderStyle_Transparent"), Value = "transparent"},
                    new SelectListItem {Text = L("UiCustomization_SubHeaderStyle_Solid"), Value = "solid"}
                }, "Value", "Text", Model.SubHeader.SubheaderStyle), new {@class = "form-control w-25", id = "SubHeaderStyle"})
            </div>
        </form>
    </div>
    <div id="Theme12Menu" class="tab-pane">
        <form class="MenuSettingsForm">
            <h5 class="margin-bottom-20">@L("UiCustomization_Menu")</h5>
            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="FixedAside" value="true" @(Model.Menu.FixedAside ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("UiCustomization_FixedMenu")
                </label>
            </div>
            <h5 class="margin-bottom-20">@L("UiCustomization_SubmenuToggle")</h5>
            <div class="form-group">
                @Html.DropDownList("SubmenuToggle", new SelectList(new List<SelectListItem>
                {
                    new SelectListItem {Text = L("UiCustomization_SubmenuToggle_Accordion"), Value = "false"},
                    new SelectListItem {Text = L("UiCustomization_SubmenuToggle_Dropdown"), Value = "true"}
                }, "Value", "Text", Model.Menu.SubmenuToggle), new { @class = "form-control w-25", id = "SubmenuToggle" })
            </div>

            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="SearchActive" value="true" @(Model.Menu.SearchActive ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("ShowMenuSearchInput")
                </label>
            </div>
        </form>
    </div>
    <div id="Theme12Footer" class="tab-pane">
        <form class="FooterSettingsForm">
            <h5 class="margin-bottom-20">@L("UiCustomization_Footer")</h5>
            <div class="form-group">
                <label class="checkbox checkbox-outline col-lg-12">
                    <input type="checkbox" name="FixedFooter" value="true" @(Model.Footer.FixedFooter ? "checked=\"checked\"" : "")>
                    <span></span>
                    @L("UiCustomization_FixedFooter")
                </label>
            </div>
        </form>
    </div>
</div>
